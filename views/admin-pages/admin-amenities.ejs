<%- include("../partials/header"); -%> <%- include("../partials/admin-navbar");
-%>
<title>Smart Society | complaints</title>

<div class="container">
  <form action="/admin/amenities" method="post" enctype="multipart/form-data">
    <section class="">
      <div class="container py-5">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card-body p-5 text-center">
              <h3 class="mb-5">ADD A NEW AMENITY</h3>

              <div class="form-outline mb-4">
                <input
                  class="form-control form-control-lg"
                  type="text"
                  name="name"
                  id="name"
                  placeholder="amenity name"
                  autofocus
                />
              </div>
              <br />

              <div class="form-outline mb-4">
                <textarea
                  class="form-control"
                  name="description"
                  id="description"
                  placeholder="amenity description"
                  cols="5"
                  rows="2"
                ></textarea>
              </div>
              <br />

              <div class="form-outline mb-4">
                <input
                  class="form-control form-control-lg"
                  name="image"
                  type="file"
                  id="image"
                  accept="image/*,.pdf,"
                />
              </div>
              <br />
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="canBeBooked"
                  name="canBeBooked"
                  value="true"
                />
                <label class="form-check-label" for="canBeBooked">
                  Can it be booked?
                </label>
              </div>
              <br /><br />
              <input class="btn btn-primary btn-lg" value="Add" type="submit" />
              <br />
            </div>
          </div>
        </div>
      </div>
    </section>
  </form>
</div>
<br />
<div class="container">
  <h3 class="table-title">amenities</h3>
  <br />
  <table class="table table-bordered border-dark align-middle">
    <tr>
      <th>sr no</th>
      <th>amenity name</th>
      <th>amenity photo</th>
      <th>amenity description</th>
      <th>can it be booked?</th>
      <th>delete amenity</th>
    </tr>
    <tr>
      <% amenities.forEach(amenity => { %>

      <td><%= amenities.indexOf(amenity) + 1 %></td>
      <td><%= amenity.name %></td>
      <td>
        <img
          class="amenity-picture"
          src="../<%= amenity.photo%>"
          alt="<%= amenity.name %>"
        />
      </td>
      <td><%= amenity.description %></td>
      <td><%= amenity.canBeBooked %></td>
      <td>
        <a
          href="/admin/amenities/delete/<%= amenity._id %> "
          class="btn btn-danger"
          type="button"
          >Delete</a
        >
      </td>
    </tr>
    <% }) %>
  </table>
</div>

<%- include("../partials/footer"); -%>
