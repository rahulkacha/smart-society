<%- include("../partials/header"); -%> <%- include("../partials/admin-navbar");
-%>

<title>Smart Society | meetings</title>


<form method="post" action="/admin/meetings">
  <section class="vh-100">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card-body p-5 text-center">
            <h3 class="mb-5">ADD A NEW MEETING</h3>

            <div class="form-outline mb-4">
              <input
                class="form-control form-control-lg"
                type="text"
                name="title"
                id="title"
                placeholder="title"
                autofocus
              />
            </div>
            <br />
            <div class="form-outline mb-4">
              <input
                class="form-control form-control-lg"
                type="text"
                name="agenda"
                id="agenda"
                placeholder="meeting agenda"
              />
            </div>
            <br />

            <div class="form-outline mb-4">
              <input
                class="form-control form-control-lg"
                type="text"
                name="details"
                id="details"
                placeholder="meeting details"
              />
            </div>
            <br />

            <div class="form-outline mb-4">
              <input
                class="form-control form-control-lg"
                type="text"
                name="venue"
                id="venue"
                placeholder="meeting venue"
              />
            </div>
            <br />

            <div class="mb-4">
              <input
                class="form-control form-control-lg"
                type="datetime-local"
                name="dateTime"
                id="dateTime"
              />
              <br />
              <label class="form-label" for="dateTime">
                <h4>schedule for:</h4></label
              >
            </div>
            <input class="btn btn-primary btn-lg" value="Add" type="submit" />
          </div>
        </div>
      </div>
    </div>
  </section>
</form>
<br />
<div class="container">
  <div class="card-body p-5 text-center">
    <h3 class="mb5">SCHEDULED MEETINGS</h3>
  </div>
  <table class="table table-bordered border-dark">
    <tr>
      <th>sr no</th>
      <th>meeting title</th>
      <th>meeting agenda</th>
      <th>meeting details</th>
      <th>date</th>
      <th>time</th>
      <th>venue</th>
      <th>delete meeting</th>
    </tr>
    <% meetings.forEach(meeting => { %>
    <tr>
      <td><%= meetings.indexOf(meeting) + 1 %></td>
      <td><%= meeting.title %></td>
      <td><%= meeting.agenda %></td>
      <td><%= meeting.details %></td>
      <td><%= moment(meeting.date).format("DD/MM/YYYY") %></td>
      <td><%= moment(meeting.date).format("hh:mm A") %></td>
      <td><%= meeting.title %></td>
      <td>
        <a
          type="button"
          href="/admin/meetings/delete/<%= meeting._id %>"
          class="btn btn-danger"
          >delete</a
        >
      </td>
    </tr>
    <% }) %>
  </table>
</div>
<%- include("../partials/footer"); -%>
