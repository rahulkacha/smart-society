<form method="post" action="/master/admin/add-society">
  <section class="vh-100">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem">
            <div class="card-body p-5 text-center">
              <h3 class="mb-5">ADD A NEW SOCIETY</h3>

              <div class="form-outline mb-4">
                <input
                  type="text"
                  id="name"
                  class="form-control form-control-lg"
                  placeholder="society name"
                  name="name"
                  autofocus
                />
              </div>
              <br />
              <div class="form-outline mb-4">
                <textarea
                  class="form-control"
                  name="address"
                  id="address"
                  placeholder="society address"
                  cols="5"
                  rows="5"
                ></textarea>
              </div>
              <br />
              <div class="form-outline mb-4">
                <select
                  class="form-select form-select-lg mb-3"
                  name="state"
                  id="state"
                >
                  <option name="testState" selected>select state</option>

                  <% state.forEach(function(obj){ %>
                  <option><%= obj %></option>
                  <% }); %>
                </select>
              </div>
              <br />
              <div class="form-outline mb-4">
                <select
                  class="form-select form-select-lg mb-3"
                  name="city"
                  id="city"
                >
                  <option selected>select city</option>

                  <% city.forEach(function(obj){ %>
                  <option><%= obj %></option>
                  <% }); %>
                </select>
              </div>
              <br />
              <div class="form-outline mb-4">
                <input
                  type="text"
                  id="postalCode"
                  class="form-control form-control-lg"
                  placeholder="postal code"
                  name="postalCode"
                />
              </div>
              <br />
              <input
                class="btn btn-primary btn-lg"
                value="Submit"
                type="submit"
              />
              <br />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</form>

